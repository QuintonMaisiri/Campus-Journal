<%- include('partials/header'); %>
<%- include('partials/nav'); %>

<body class="compose-body">
    <h1><%=journal %></h1>

    <div class="compose-container" id="composeContainer">
            <input type="hidden" id = "journalName" name="journal" value="<%=journal %>">
            <input type="hidden" id = "articleName" name="articleName" value="<%=title %>">     
            <div id="editorjs"></div>     
            <button class="btn btn-primary" id = "submit">Submit</button>   

            <div class="addImage" id="addImageContainer">
                <p>Click Next to add image</p>
                <form action="/image" method="post">
                    <button class="btn btn-primary" id="addImageButton" disabled="true"> Next </button>
                    <input type="hidden" name="id" id="imageId">
                </form>
                
            </div>
    </div>

    <script src="/js/editor.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@editorjs/header@latest"></script>
    <script src="https://cdn.jsdelivr.net/npm/@editorjs/list@latest"></script>
    <script src="/js/editor_controller.js"></script>

</body>